<form class="col-9" action="https://formspree.io/<%= env.FORM_EMAIL %>" method="POST">
  <input type="hidden" name="_cc" value="<%= env.TRELLO_BOARD_EMAIL %>">
  <fieldset>
    <legend>Анкета участника кампании</legend>

    <p>
      <label class="mr-sm-2" for="first_name">Имя</label>
      <input class="mb-2 mr-sm-2" type="text" name="first_name">
      <label class="mr-sm-2" for="last_name">Фамилия</label>
      <input class="mb-2 mr-sm-2" type="text" name="last_name">
    </p>

    <p>
      <label class="mr-sm-2" for="phone">Телефон</label>
      <input class="mb-2 mr-sm-2" type="tel" name="phone" placeholder="8**********">
      <label class="mr-sm-2" for="email">Email</label>
      <input class="mb-2 mr-sm-2" type="email" name="email">
    </p>

    <p>
      <label for="date">Дата рождения</label>
      <input type="date" name="birth_date">
    </p>

    <p>
      <label class="mr-sm-2">Какому кандидату хотите помочь?</label>
      <% candidates.forEach((candidate) => { %>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" value="<%= candidate.name %>">
          <label class="form-check-label" for="inlineCheckbox1"><%= candidate.name %></label>
        </div>
      <% }) %>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="Всем">
        <label class="form-check-label" for="inlineCheckbox1">Всем могу помочь</label>
      </div>
    </p>

    <p>
      <label class="mr-sm-2" for="phone">Страницы в соцсетях</label>
      <input class="form-control mb-2 mr-sm-2" type="text" name="social_networks">
    </p>

    <p>
      <label>
        <input type="checkbox" value="" name="agree_processing">
        Согласие на обработку персональных данных
      </label>
    </p>

    <p>
      <button type="submit" class="btn btn-primary mb-2">Присоединиться к кампании</button>
    </p>
  </fieldset>
</form>
